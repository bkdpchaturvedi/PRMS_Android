<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".schedule.android.ui.MaintainScheduleScreen"
    tools:showIn="@layout/activity_program_slot">

    <TextView
        android:id="@+id/tv_programslot_radioprogram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/radioprogram"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_programslot_radioprogram"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/action_select"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/tv_programslot_radioprogram_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/no_records_selected"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            app:layout_constraintEnd_toStartOf="@+id/btn_programslot_radioprogram"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />
        </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_programsot_presenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preseenter"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_programslot_presenter"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/action_select"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/tv_programslot_presenter_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/no_records_selected"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            app:layout_constraintEnd_toStartOf="@+id/btn_programslot_presenter"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />
        </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_programslot_producer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prodcuer"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_programslot_producer"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/action_select"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/tv_programslot_producer_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/no_records_selected"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            app:layout_constraintEnd_toStartOf="@+id/btn_programslot_presenter"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:calendarViewShown="true"
            android:spinnersShown="false"
            android:layout_weight="4"
            android:layout_height="0dp" />

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:timePickerMode="spinner"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/date_time_set"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="Set"
            android:layout_height="0dp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>