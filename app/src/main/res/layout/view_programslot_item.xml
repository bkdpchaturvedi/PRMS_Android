<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/cardview_dark_background">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"   android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:id="@+id/radioprogramlayout"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio Program"
                android:textSize="7sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/programTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="radio program"
                android:textColor="@android:color/holo_green_dark"
                android:textColorHighlight="@android:color/holo_green_light"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical"  android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"   android:layout_marginEnd="8dp"
                   android:id="@+id/starttimelayout"
                    android:layout_height="wrap_content" android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="Time" android:textSize="7sp" android:textColor="@android:color/holo_blue_dark"/>
                    <TextView
                        android:id="@+id/fromTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="start time"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/durationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="duraiton"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="7sp" />

                    <TextView
                        android:id="@+id/toTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="duration"
                        android:textAlignment="textStart"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/presenterNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|start"
                        android:text="presenter"
                        android:textSize="7sp"
                        android:textColor="@android:color/holo_blue_dark" />

                    <TextView
                        android:id="@+id/presenterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="presenter Name" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="left"

                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/producerNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="producer"
                        android:textSize="7sp"
                        android:textColor="@android:color/holo_blue_dark" />

                    <TextView
                        android:id="@+id/producerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="producer Name" />
                </LinearLayout>

        </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>